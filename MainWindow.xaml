<Window x:Class="NinjaTraderLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NinjaTraderLauncher"
        mc:Ignorable="d"
        Title="NT Launcher" Height="150" Width="150" Icon="/NinjaTrader.ico" WindowStyle="ToolWindow" Background="#FFFF4200">
    <DockPanel>
        <Menu x:Name="MainMenu" Margin="0,0,0,0" DockPanel.Dock="Top">
            <MenuItem Header="E_xit" Click="MenuItem_Click"/>
        </Menu>
        <Grid>
            <Grid x:Name="MainWindowControlGrid" Margin="0,0,0,0" Height="76"/>
            <Button x:Name="LaunchButton" Content="Launch" Margin="40,0,40,5" Click="LaunchButton_Click" Height="20" VerticalAlignment="Bottom"/>
        </Grid>
    </DockPanel>
</Window>
