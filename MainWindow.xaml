<Window x:Class="NinjaTraderLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NinjaTraderLauncher"
        mc:Ignorable="d"
        Title="Ninja Forge" Height="315" Width="450" Icon="Launcher2.ico" >

    <!--  Background="#FFFF4200"  -->

    <DockPanel>
        <Menu x:Name="MainMenu" Margin="0,0,0,0" DockPanel.Dock="Top">
            <MenuItem Header="E_xit" Click="MenuItem_Click"/>
        </Menu>

        <Border x:Name="OuterBorder" Margin="4,4,4,4" BorderBrush="Black" BorderThickness="1">
            <Grid DockPanel.Dock="Bottom">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border x:Name="UpperControlsBorder" Grid.Column="0" Margin="4,4,4,2" BorderBrush="Black" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Margin="4,4,3,4" BorderBrush="Black" BorderThickness="1">
                            <Grid x:Name="LauncherControlGrid" Margin="5,5,5,5" />
                        </Border>

                        <Border Grid.Column="1" Grid.Row="0" Margin="3,4,4,4" BorderBrush="Black" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid x:Name="CleanerControlGrid" Background="#FFE5E5E5" Margin="5,5,5,5" Grid.Row="0" Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <CheckBox x:Name="cleanCacheCheckBox" Content="Reflection Cache" HorizontalAlignment="Left" Margin="12,0,0,0" Grid.Row="0" VerticalAlignment="Center"/>
                                    <CheckBox x:Name="cleanLogCheckBox" Content="Log Files" HorizontalAlignment="Left" Margin="12,0,0,0" Grid.Row="1" VerticalAlignment="Center"/>
                                    <CheckBox x:Name="cleanTraceCheckBox" Content="Trace Files" HorizontalAlignment="Left" Margin="12,0,0,0" Grid.Row="2" VerticalAlignment="Center"/>
                                    <CheckBox x:Name="cleanDBCheckBox" Content="Price Data" HorizontalAlignment="Left" Margin="12,0,0,0" Grid.Row="3" VerticalAlignment="Center"/>
                                    <CheckBox x:Name="cleanAnalyzerLogsCheckBox" Content="Analyzer Logs" HorizontalAlignment="Left" Margin="12,0,0,0" Grid.Row="4" VerticalAlignment="Center"/>
                                </Grid>

                                <CheckBox x:Name="cleanAllCheckBox" Content="Clean All" HorizontalAlignment="Center" Margin="12,0,0,0" VerticalAlignment="Top" Grid.Row="1" Checked="cleanAllCheckBox_Checked" Unchecked="cleanAllCheckBox_Checked"/>
                                <Button x:Name="cleanButton" Content="Clean Now" HorizontalAlignment="Center" Margin="0,4,0,4" Grid.Row="3" VerticalAlignment="Center" Click="cleanButton_Click"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <Border x:Name="LowerControlsBorder" Grid.Row="1" Grid.Column="0" Margin="4,2,4,4" BorderBrush="Black" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*" />
                            <ColumnDefinition Width="50*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <CheckBox x:Name="SafeModeCheckBox" Content="Safe Mode" HorizontalAlignment="Center" Margin="5,5,5,5" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>
                        <Button x:Name="LaunchButton" Content="Launch" Margin="5,0,5,5" Click="LaunchButton_Click" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1"/>
                        <Button x:Name="LaunchAndCleanButton" Content="Clean and launch" Margin="5,0,5,5" Click="LaunchAndCleanButton_Click" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1"/>

                    </Grid>
                </Border>

            </Grid>
        </Border>

    </DockPanel>
</Window>
