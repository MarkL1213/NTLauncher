<Window x:Class="NinjaTraderLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NinjaTraderLauncher"
        mc:Ignorable="d"
        Title="MainWindow" Height="180" Width="160">
    <Grid>
        <RadioButton x:Name="TradingRadioButton" Content="Trading" HorizontalAlignment="Left" Margin="28,19,0,0" VerticalAlignment="Top" Checked="TradingRadioButton_Checked"/>
        <RadioButton x:Name="CodeWorkButton" Content="Code Work" HorizontalAlignment="Left" Margin="28,54,0,0" VerticalAlignment="Top" Checked="CodeWorkButton_Checked"/>
        <Button x:Name="LaunchButton" Content="Launch" HorizontalAlignment="Left" Margin="28,94,0,0" VerticalAlignment="Top" Height="30" Width="95" Click="LaunchButton_Click"/>

    </Grid>
</Window>
